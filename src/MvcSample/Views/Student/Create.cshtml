@model MvcSample.Models.Student
<h2>Create</h2>
<hr/>
<form asp-action="Create" asp-controller="Student">
    <div class="form-horizontal">
        <h4>Student</h4>
        <hr/>
        <div class="form-group">
            <div class="row">
                <label class="control-label col-md-2" asp-for="FirstName"></label>
                <div class="col-md-10">
                    <input class="form-control" asp-for="FirstName"/>
                </div>
                
                <label class="control-label col-md-2" asp-for="LastName"></label>
                <div class="col-md-10">
                    <input class="form-control" asp-for="LastName" />
                </div>
                
                <label class="control-label col-md-2" asp-for="Age"></label>
                <div class="col-md-10">
                    <input class="form-control" asp-for="Age" />
                </div>
                
                <label class="control-label col-md-2" asp-for="IsActive"></label>
                <div class="col-md-10">
                    <input class="form-control" asp-for="IsActive" />
                </div>
            </div>
        </div>
        <input type="submit" value="Create" class="btn btn-default"/>
    </div>
</form>
